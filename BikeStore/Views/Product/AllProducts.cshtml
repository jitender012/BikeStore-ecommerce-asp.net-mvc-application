@*@model List<BikeStoreModels.productModel>*@
@model IEnumerable<BikeStoreModels.productModel>

<style>
    .thead-dark th {
        background-color: lightblue;
        color: black;
    }
</style>
<center>

    <h2 class="pt-3"><u>Manage Products</u></h2>
</center>

<p>
    @Html.ActionLink("Create Product", "Create", "", new { @class = "btn btn-success" })
</p>
<table class="table table-bordered table-hover table-striped" id="tbllist">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.product_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.brand.brand_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.category.category_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.model_year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.list_price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.url)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.product_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.product_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.brand.brand_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.category.category_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.model_year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.list_price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    <img style="height:100px; width:150px" src="@item.url" alt="vImg">
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.product_id }, new { @class = "btn btn-outline-primary", style = "width:70px" })
                    @Html.ActionLink("Details", "ProductDetails", new { id = item.product_id }, new { @class = "btn btn-outline-success", style = "width:70px" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.product_id }, new { @class = "btn btn-outline-danger", style = "width:70px" })
                </td>
            </tr>
        }

    </tbody>

</table>

